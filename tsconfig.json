{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ESNext",
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "sourceMap": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "paths": {
      "@/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@store/*": ["src/store/*"],
      "@services/*": ["src/services/*"],
      "@headers": ["src/headers/*"],
      "@http/*": ["src/headers/http/*"],
      "@configs": ["src/configs/*"],
      "@router": ["src/router/*"],
      "@hooks": ["src/hooks/*"],
      "@directives": ["src/directives/*"],
      "@constants": ["src/constants/*"],
      "@enums": ["src/enums/*"],
      "@compatibles": ["src/compatibles/*"],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "build/**/*.ts",
    "build/**/*.tsx",
    "auto-imports.d.ts",
    "components.d.ts",
    "vite-env.d.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }],
  "exclude": [
    "node_modules",
    "dist",
    ".yarn",
    ".pnp.*",
    "build",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.test.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/*.spec.js",
    "src/**/*.spec.jsx"
  ]
}
